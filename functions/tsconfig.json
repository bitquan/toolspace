{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/tools/file_merger/**",
    "src/tools/image_resizer/**",
    "src/tools/md_to_pdf/**",
    "src/tools/url-short/**"
  ]
}
