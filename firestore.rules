rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Auth helper function
    function authed() {
      return request.auth != null;
    }
    
    // Tenant isolation - users can only access their own data
    function isOwner(userId) {
      return authed() && request.auth.uid == userId;
    }
    
    // User documents
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Tool configurations per user
    match /users/{userId}/tools/{toolId} {
      allow read, write: if isOwner(userId);
    }
    
    // Billing information per user
    match /users/{userId}/billing/{document} {
      allow read, write: if isOwner(userId);
    }
    
    // Public tool metadata (read-only)
    match /tool_metadata/{toolId} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}