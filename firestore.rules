rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection - strict per-UID access
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // User Billing Subcollections - only the owner can access
    match /users/{uid}/billing/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // User Usage Subcollections - only the owner can access
    match /users/{uid}/usage/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // User Settings Subcollections - only the owner can access
    match /users/{uid}/settings/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // User Analytics Subcollections - only the owner can access
    match /users/{uid}/analytics/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Default: deny all access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
